---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <div class="tasks-screen p-6 text-white">
    <h1 class="text-3xl font-bold mb-4">Tasks</h1>
    <p class="text-gray-300 mb-6">Complete tasks to earn XP and rewards!</p>

    <div class="task-list space-y-4">
      <!-- Replace with dynamic tasks -->

      <div class="task bg-neutral-800/75 p-4 rounded-md flex justify-between items-center">
        <div>
          <h2 class="text-md font-semibold ">Buy $RUG</h2>
          <p class="text-white/75 text-xs">1000XP</p>
        </div>
        <button class="bg-white text-black font-semibold text-xs px-6 py-3 rounded-md">Begin Task</button>
      </div>

      <div class="task bg-neutral-800/75 p-4 rounded-md flex justify-between items-center">
        <div>
          <h2 class="text-md font-semibold">Refer a friend</h2>
          <p class="text-white/75 text-xs">200XP</p>
        </div>
        <button class="bg-white text-black font-semibold text-xs px-6 py-3 rounded-md">Begin Task</button>
      </div>

      <div class="task bg-neutral-800/75 p-4 rounded-md flex justify-between items-center">
        <div>
          <h2 class="text-md font-semibold">Follow @Obxd on X</h2>
          <p class="text-white/75 text-xs">500XP</p>
        </div>
        <button class="bg-white text-black font-semibold text-xs px-6 py-3 rounded-md">Begin Task</button>
      </div>

    </div>
  </div>
</Layout>
