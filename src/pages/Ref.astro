  <script>
    function copyToClipboard() {
      const input = document.querySelector('input[type="text"]');
      input.select();
      input.setSelectionRange(0, 99999); // For mobile devices
      navigator.clipboard.writeText(input.value);
      alert("Referral link copied!");
    }
  </script>
</Layout>
