<script>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll("#footer-links a");
    const currentPath = window.location.pathname;

    links.forEach((link) => {
      // Check if the link's href matches the current path
      if (link.getAttribute("href") === currentPath) {
        // Remove default opacity and set the active class
        link.classList.remove("opacity-30");
        link.classList.add("text-lime-400");
      } else {
        // Ensure other links have the inactive class
        link.classList.add("opacity-30");
        link.classList.remove("text-lime-400");
      }

      // Add click event to switch active state without reloading the page
      link.addEventListener("click", (event) => {
  

        // Update the active class based on the clicked link
        links.forEach((item) => {
          item.classList.add("opacity-30");
          item.classList.remove("text-lime-400");
        });

        link.classList.remove("opacity-30");
        link.classList.add("text-lime-400");

        // Optionally, you can dynamically load content here
        // For example, load new content via AJAX or change the URL without reloading the page:
        window.history.pushState({}, "", link.getAttribute("href"));
      });
    });
  });
</script>
